<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Weekly Sumup | CloudCash</title>
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="/css/sidebar_style.css">
    </head>
    <body>
        <aside class="sidebar">
            <div class="sidebar-logo">
                <img src="/images/cloudcash-logo.png" alt="CloudCash">
                <span>cloudcash</span>
            </div>
        
            <nav class="sidebar-nav">
                <a href="/overview" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                        <polyline points="9 22 9 12 15 12 15 22"/>
                    </svg>
                    Overview
                </a>
        
                <a href="/transactions" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="12" y1="1" x2="12" y2="23"/>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                    </svg>
                    Transactions
                </a>
        
                <a href="/cards" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
                        <line x1="1" y1="10" x2="23" y2="10"/>
                    </svg>
                    Cards
                </a>

                <a href="/invoices" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                        <polyline points="14 2 14 8 20 8"/>
                        <line x1="16" y1="13" x2="8" y2="13"/>
                        <line x1="16" y1="17" x2="8" y2="17"/>
                        <polyline points="10 9 9 9 8 9"/>
                    </svg>
                    Invoices
                </a>
        
                <a href="/goals" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="8" x2="12" y2="16"/>
                        <line x1="8" y1="12" x2="16" y2="12"/>
                    </svg>
                    Goals
                </a>
        
                <a href="/settings" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="3"/>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
                    </svg>
                    Settings
                </a>

            </nav>
        </aside>

        <main class="main-content">
            <!-- Header Section -->
            <div class="header-section">
                <div class="header-left">
                    <h1 class="page-title">Weekly sumup</h1>
                    <p class="page-subtitle">Get summary of your weekly online transactions here.</p>
                </div>
                <div class="header-right">
                    <div class="notification">
                        <img src="/images/mail.svg" alt="Mail" class="icon">
                        <img src="/images/bell.svg" alt="Notifications" class="icon">
                    </div>
                    <div class="user-profile">
                        <img src="/images/avatar.png" alt="User" class="avatar">
                        <div class="user-info">
                            <span class="user-name"><%= data.user.name %></span>
                            <span class="user-role">Admin account</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Grid Section -->
            <div class="content-grid">

                <div class="left-section">
                    <h2 class="section-title">Card</h2>
                    <div class="card-container">
                        <div class="card-wrapper">
                            <!-- <button class="nav-arrow prev">‚Üê</button> -->
                            <div class="credit-card">
                                <div class="card-header">
                                    <img src="/images/cloudcash-white.png" alt="CloudCash" class="card-logo">
                                </div>
                                <div class="card-number">
                                    <%= data.card.number %>
                                </div>
                                <div class="card-footer">
                                    <div class="card-holder">
                                        <span>Card holder</span>
                                        <strong><%= data.card.holder %></strong>
                                    </div>
                                    <div class="card-expires">
                                        <span>Expires</span>
                                        <strong><%= data.card.expiry %></strong>
                                    </div>
                                </div>
                            </div>
                            <!-- <button class="nav-arrow next">‚Üí</button> -->
                        </div>

                        <div class="card-limit">
                            <div class="limit-info">
                                <span>Weekly payment limit</span>
                                <span>$<%= data.card.outcome %> / $<%= data.card.limit %></span>
                            </div>
                            <div class="limit-bar">
                                <div class="limit-progress" style="width: <%= Math.min(Math.max((data.card.outcome/data.card.limit) * 100, 0), 100) %>%;"></div>
                            </div>
                        </div>
                        
                        <div class="card-info">
                            <div class="balance-info">
                                <div class="current-balance">
                                    <span class="card_amount">$ <%= data.card.balance %></span>
                                    <span class="label">Current balance</span>
                                </div>
                                <div class="income">
                                    <span class="card_amount green">$ <%= data.card.income %></span>
                                    <span class="label">Income</span>
                                </div>
                                <div class="outcome">
                                    <span class="card_amount red">$ <%= data.card.outcome %></span>
                                    <span class="label">Outcome</span>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="transactions-section">
                        <h2 class="section-title">Transaction history</h2>
                        <div class="transactions-table">
                            <div class="table-header">
                                <div>Receiver</div>
                                <div>Type</div>
                                <div>Date</div>
                                <div>Amount</div>
                            </div>
                            <% data.transactions.forEach(transaction => { %>
                            <div class="table-row">
                                <div class="receiver">
                                    <% if(transaction.type === 'Shopping') { %>
                                        <span class="icon shopping">üõí</span>
                                    <% } else if(transaction.type === 'Food') { %>
                                        <span class="icon food">üçΩÔ∏è</span>
                                    <% } else if(transaction.type === 'Sport') { %>
                                        <span class="icon sport">‚öΩ</span>
                                    <% } %>
                                    <%= transaction.receiver %>
                                </div>
                                <div class="type"><%= transaction.type %></div>
                                <div class="date"><%= transaction.date %></div>
                                <div class="amount">$<%= transaction.amount %></div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <div class="right-section">
                    <!-- Goals Section -->
                    <div class="right-unit">
                        <section class="goals-section">
                            <div class="section-header">
                                <h2 class="section-title">Goals</h2>
                                <button class="add-button">+</button>
                            </div>
                            <div class="goals-grid">
                                <% data.goals.forEach(goal => { %>
                                <div class="goal-card">
                                    <div class="goal-icon"><%= goal.icon %></div>
                                    <div class="goal-info">
                                        <h3><%= goal.name %></h3>
                                        <div class="goal-amount">$<%= goal.amount %></div>
                                        <div class="goal-date"><%= goal.date %></div>
                                    </div>
                                </div>
                                <% }); %>
                            </div>
                        </section>
                    </div>

                    <!-- Statistics Section -->
                    <div class="right-unit">
                        <section class="statistics-section">
                            <h2 class="section-title">Outcome Statistics</h2>
                            <div class="statistics-list">
                                <% data.statistics.forEach(stat => { %>
                                <div class="stat-item">
                                    <div class="stat-info">
                                        <span class="stat-icon <%= stat.category.toLowerCase() %>"></span>
                                        <span class="stat-label"><%= stat.category %></span>
                                    </div>
                                    <div class="stat-bar">
                                        <div class="stat-progress" style="width: <%= stat.percentage %>%"></div>
                                    </div>
                                    <span class="stat-percentage"><%= stat.percentage %>%</span>
                                </div>
                                <% }); %>
                            </div>
                        </section>
                    </div>

                    <!-- New Transaction Section -->
                     <div class="right-unit">
                        <section class="new-transaction-section">
                            <h2 class="section-title">New transaction</h2>
                            <div class="users-list">
                                <% ['Ann', 'Monica', 'John', 'Mike', 'Mia'].forEach(user => { %>
                                <div class="user-avatar">
                                    <img src="/images/avatars/<%= user.toLowerCase() %>.png" alt="<%= user %>">
                                    <span><%= user %></span>
                                </div>
                                <% }); %>
                                <button class="add-user">Add New</button>
                            </div>
                            <div class="transaction-form">
                                <input type="text" placeholder="Enter amount..." class="amount-input">
                                <button class="send-button">Send the transfer</button>
                            </div>
                        </section>
                     </div>

                </div>
            </div>
        </main>
    </body>
</html>